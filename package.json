{
  "name": "delve",
  "version": "1.0.0",
  "description": "Personal wiki powered by Claude Code",
  "type": "module",
  "scripts": {
    "build:client": "tsx scripts/build-client.ts",
    "watch:client": "tsx scripts/build-client.ts --watch",
    "dev": "npm run build:client && concurrently \"npm run watch:client\" \"tsx watch src/index.ts\"",
    "start": "npm run build:client && tsx src/index.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "diff-match-patch": "^1.0.5",
    "hono": "^4.11.0",
    "htmldiff-js": "^1.0.5",
    "marked": "^15.0.4",
    "streaming-markdown": "^0.2.15"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/diff-match-patch": "^1.0.36",
    "@types/node": "^22.10.1",
    "concurrently": "^9.1.0",
    "esbuild": "^0.27.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
}
