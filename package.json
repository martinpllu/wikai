{
  "name": "delve",
  "version": "1.0.0",
  "description": "Personal wiki powered by Claude Code",
  "type": "module",
  "scripts": {
    "build:client": "tsx scripts/build-client.ts",
    "watch:client": "tsx scripts/build-client.ts --watch",
    "dev": "npm run build:client && concurrently \"npm run watch:client\" \"tsx watch src/index.ts\"",
    "start": "npm run build:client && tsx src/index.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "hono": "^4.6.12",
    "marked": "^15.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.10.1",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
